# ====== Rules for making standard sense 5 matrix files =================================

# stranded sense matrix files
rule my_5_sense_matrix2:
    input:
        fw  =   PROJ   + "/bw/{newnam}_" + INDEX_SAMPLE + "_" + SEQ_DATE + NORMS + "_fw.bw",
        rev =   PROJ   + "/bw/{newnam}_" + INDEX_SAMPLE + "_" + SEQ_DATE + NORMS + "_rev.bw"
    output:
        sense   = temp(PROJ   + "/matrix/{newnam}_temp02_5_matrix.gz"),
        sense1  = temp(PROJ   + "/matrix/{newnam}_temp12_5_matrix.gz"),
        sense2  = temp(PROJ   + "/matrix/{newnam}_temp22_5_matrix.gz")
    params:
        job_name = "{newnam}_sense_matrix2",
        args     = CMD_PARAMS["reference5"]  + CMD_PARAMS["bamCoverageBL"],
        fw_ref   = FW_REF,
        rev_ref  = REV_REF
    resources:
        memory   = MEMORY * 5
    log:
        out = PROJ + "/logs/{newnam}_sense_5_matrix2.out",
        err = PROJ + "/logs/{newnam}_sense_5_matrix2.err"
    message:
        "standard sense 5 matrix files {wildcards.newnam}"
    threads: 
        12
    shell:
        """
        # no unscaled body
        computeMatrix reference-point \
          {params.args} \
          -R {params.fw_ref} \
          -S {input.fw} \
          -p {threads} \
          -o {output.sense1}

        computeMatrix reference-point \
          {params.args} \
          -R {params.rev_ref} \
          -S {input.rev} \
          -p {threads} \
          -o {output.sense2}

        computeMatrixOperations rbind -m {output.sense1} {output.sense2} -o {output.sense}

        """

# stranded antisense matrix files
rule my_5_amtisense_matrix2:
    input:
        fw  =   PROJ   + "/bw/{newnam}_" + INDEX_SAMPLE + "_" + SEQ_DATE + NORMS + "_fw.bw",
        rev =   PROJ   + "/bw/{newnam}_" + INDEX_SAMPLE + "_" + SEQ_DATE + NORMS + "_rev.bw"
    output:
        asense   = temp(PROJ   + "/matrix/{newnam}_temp02_a5_matrix.gz"),
        asense1  = temp(PROJ   + "/matrix/{newnam}_temp12_a5_matrix.gz"),
        asense2  = temp(PROJ   + "/matrix/{newnam}_temp22_a5_matrix.gz")
    params:
        job_name = "{newnam}_5_antisense_matrix2",
        args     = CMD_PARAMS["reference5"] + CMD_PARAMS["bamCoverageBL"],
        fw_ref   = FW_REF,
        rev_ref  = REV_REF
    resources:
        memory   = lambda wildcards, input: memory_estimator(input, 2, 5)
    log:
        out = PROJ + "/logs/{newnam}_antisense_5_matrix2.out",
        err = PROJ + "/logs/{newnam}_antisense_5_matrix2.err"
