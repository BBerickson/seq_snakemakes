# make url's and scp to sandbox
rule my_5_url:
    input:
        matrix1 = PROJ   + "/matrix/{newnam}_temp02_fix_5_matrix.gz",
        matrix2 = PROJ   + "/matrix/{newnam}_temp02_fix_a5_matrix.gz"
    output:
        temp(PROJ + "/matrix/5.{newnam}_matrix.url.txt"),
        PROJ + "/matrix/5_{newnam}_" + INDEX_SAMPLE + "_" + SEQ_DATE + NORM5[1] + "_matrix.gz",
        PROJ + "/matrix/5_{newnam}_" + INDEX_SAMPLE + "_" + SEQ_DATE + NORM5[1] + "_anti_matrix.gz"
    params:
        job_name = PROJ + "_5_matrix_url2",
        color    = _get_col,
        groupkey = lambda wildcards: next((k for k, v in GROUP2.items() if wildcards.newnam in v), "self"),
        url_out  = "http://amc-sandbox.ucdenver.edu/" + USER + "/" + PROJ + "/5_{newnam}_" + INDEX_SAMPLE + "_" + SEQ_DATE + NORM5[1] + "_matrix.gz",
        url_anti = "http://amc-sandbox.ucdenver.edu/" + USER + "/" + PROJ + "/5_{newnam}_" + INDEX_SAMPLE + "_" + SEQ_DATE + NORM5[1] + "_anti_matrix.gz"
    resources:
        memory   = 4
    log:
        out = PROJ + "/logs/{newnam}_sense_5_matrix_url2.out",
        err = PROJ + "/logs/{newnam}_sense_5_matrix_url2.err"
    message:
        "Creating sense 5_matrix url for {wildcards.newnam}"
    threads:
        1
    shell:
        """
        # fix for strange side affect that only the 1 line loads from sandbox
        computeMatrixOperations relabel -m {input.matrix1} -o {output[1]}
        computeMatrixOperations relabel -m {input.matrix2} -o {output[2]}
        echo {params.url_out} {params.groupkey} 5.{wildcards.newnam}_{SEQ_DATE} {params.color} >> {output[0]}
        ssh amc-sandbox 'mkdir -p ./public_html/{PROJ}'
        scp {output[1]} amc-sandbox:./public_html/{PROJ}
        echo {params.url_anti} {params.groupkey} 5.{wildcards.newnam}_{SEQ_DATE}_anti {params.color} >> {output[0]}
        scp {output[2]} amc-sandbox:./public_html/{PROJ}
        """
        
# Combine urls
rule my_5_url_summary:
    input:
        sorted(expand(
            PROJ + "/matrix/5.{newnam}_matrix.url.txt",
            newnam = NAMS_UNIQ
        ))
    output:
        PROJ + "/URLS/5_" + PROJ + "_" + INDEX_SAMPLE + NORM5[1] + "_matrix.url.txt"
    params:
        job_name = PROJ + "_sense_5_matrix_url"
    resources:
        memory   = 4
    log:
        out = PROJ + "/logs/" + PROJ + "_sense_5_matrix_url.out",
        err = PROJ + "/logs/" + PROJ + "_sense_5_matrix_url.err"
    message:
        "Creating " + PROJ + " sense 5_matrix url"
    threads:
        1
    run:
        with open(output[0], "w") as out:
            for file in input:
                for line in open(file, "r"):
                    out.write(line)




