

rule create_report:
    input:
        expand(
            PROJ + "/heatmap/5_{group2}_" + INDEX_SAMPLE + "_" + SEQ_DATE + "_" + NORM5S + ".png",
            group2 = GRP2_UNIQ
        ),
        expand(
            PROJ + "/heatmap/3_{group2}_" + INDEX_SAMPLE + "_" + SEQ_DATE + "_" + NORM3 + ".png",
            group2 = GRP2_UNIQ
        ),
        expand(
            PROJ + "/heatmap/5_{group2}_" + INDEX_SAMPLE + "_" + SEQ_DATE + "_" + NORM5S + "_profile.png",
            group2 = GRP2_UNIQ
        ),
        expand(
            PROJ + "/heatmap/3_{group2}_" + INDEX_SAMPLE + "_" + SEQ_DATE + "_" + NORM3 + "_profile.png",
            group2 = GRP2_UNIQ
        )
    output:
        PROJ + "/" + PROJ + "_" + INDEX_SAMPLE + "_heatmap_analysis.html"
    params:
        job_name   = PROJ + "_heatmap_plots",
        memory     = MEMORY
    log:
        out = PROJ + "/logs/" + PROJ + "_heatmap_plots.out",
        err = PROJ + "/logs/" + PROJ + "_heatmap_plots.err"
    message:
        "Creating heatmap plots for " + PROJ + " project"
    threads:
        1
    shell:
        """
        Rmd=src/Rmds/analysis_heatmap.Rmd
        script=src/Rmds/knit_rmd.R
        samp=samples.yaml
        out="_heatmap_analysis"

        Rscript $script \
            -i $Rmd \
            -o $out \
            -p {PROJ} \
            -m {INDEX_MAP} \
            -x {INDEX_SAMPLE} \
            -s $samp 
        """
        